var rate = 0.07;
var x = 0;
var y = 0;
fill(255,0,0);
colorMode(HSB,255)

function draw(){
background(255);
fill(128 + 128 * sin(millis() / 1000),255,255);
var targetx = mouseX;
var targety = mouseY;
x = targetx*rate + x*(1-rate); // rate is 0.1, or 10% -- (1-rate) is 0.9, or 90%
y = targety*rate + y*(1-rate);
ellipse(x, y, (20 * sin(millis() / 100))*(3 * sin(millis() / 100)), 15*(3 * sin(millis() / 100)));
}
